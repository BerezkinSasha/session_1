<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin.SignInActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_signin" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/rectangle_signin" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.722">

        <EditText
            android:id="@+id/edTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/form_input_login"
            android:ems="10"
            android:hint="Ivanov.I."
            android:inputType="textPersonName"
            android:paddingLeft="70dp"
            android:textColorHint="#A9A9A8" />

        <EditText
            android:id="@+id/edTextPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/form_input_password"
            android:ems="10"
            android:hint="••••••"
            android:inputType="textPassword"
            android:paddingLeft="70dp"
            android:textColorHint="#A9A9A8"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Forgot Password?"
            android:textColor="#A9A9A8" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="317dp"
            android:layout_height="58dp"
            android:layout_marginTop="8dp"
            android:background="#4254BC"
            android:onClick="onClick"
            android:text="SIGN IN"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:clickable="true"
            android:onClick="onClick"
            android:text="Create A New Account?"
            android:textColor="#A9A9A8" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>